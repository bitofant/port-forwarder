{
	"$schema": "http://json-schema.org/draft-06/schema",
	"title": "Port-Forwarder config",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"type": "string",
			"format": "uri",
			"description": "Schema reference"
		},
		"port": {
			"type": "number",
			"minimum": 1,
			"maximum": 65536,
			"description": "The network port that the forwarder listens on"
		},
		"allowedPorts": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"type": "number",
						"minimum": 1,
						"maximum": 65536,
						"description": "A single port to forward to"
					},
					{
						"type": "object",
						"title": "Port range",
						"description": "Range of ports that are allowed",
						"additionalProperties": false,
						"required": [
							"from",
							"to"
						],
						"properties": {
							"from": {
								"type": "number",
								"minimum": 1,
								"maximum": 65536
							},
							"to": {
								"type": "number",
								"minimum": 1,
								"maximum": 65536
							}
						}
					}
				]
			}
		}
	}
}